        <snapshotRepository>
            <id>snapshots</id>
            <url>http://artifactory.uber.internal:4587/artifactory/libs-snapshot-local/</url>
        </snapshotRepository>
    </distributionManagement>

    <properties>

        <com.fasterxml.jackson.core.version>2.8.9</com.fasterxml.jackson.core.version>
        <com.google.inject.verion>4.1.0</com.google.inject.verion>
        <com.squareup.okhttp3.mockwebserver.version>3.6.0</com.squareup.okhttp3.mockwebserver.version>
        <org.apache.commons.version>3.5</org.apache.commons.version>
        <org.slf4j.version>1.7.22</org.slf4j.version>
        <junit.version>4.12</junit.version>
        <com.fasterxml.jackson.core.version>2.8.9</com.fasterxml.jackson.core.version>
        <!-- Misc -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <!-- TODO: force checkstyle -->
        <checkstyle.skip>true</checkstyle.skip>

    </properties>

